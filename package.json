{
  "name": "@ramp/api-crypto-address-validator",
  "description": "Wallet address validator for Bitcoin and other Altcoins.",
  "main": "dist/ramp-crypto-address-validator.umd.js",
  "module": "dist/ramp-crypto-address-validator.es5.js",
  "typings": "dist/types/ramp-crypto-address-validator.d.ts",
  "version": "1.13.1",
  "author": "Swyftx",
  "publishConfig": {
    "access": "public"
  },
  "contributors": [
    {
      "name": "Tomek Kolasa",
      "email": "tomek@kolasa.me"
    }
  ],
  "homepage": "https://github.com/Swyftx/crypto-address-validator",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Swyftx/crypto-address-validator.git"
  },
  "scripts": {
    "minify": "uglifyjs -c -m -o dist/wallet-address-validator.min.js -- dist/wallet-address-validator.js",
    "test:node": "mocha -r ts-node/register test/*.ts",
    "test:browser": "karma start",
    "test": "yarn run bundle && npm run test:node && npm run test:browser",
    "start": "npm run bundle && npm test",
    "generateReadme": "node debug/generateReadme.js && git add README.md dist/wallet-address-validator.min.js.gz package.json",
    "createMin": "yarn run bundle && git add dist/wallet-address-validator.js dist/wallet-address-validator.min.js",
    "preversion": "yarn run createMin && yarn run generateReadme",
    "postversion": "git push origin HEAD --follow-tags && hub pull-request -o -b dev -m v%npm_package_version%",
    "build": "tsc --module commonjs && rollup -c rollup.config.ts"
  },
  "dependencies": {
    "@iota/validators": "^1.0.0-beta.6",
    "base-x": "^3.0.4",
    "base58-js": "^1.0.0",
    "bchaddrjs-slp": "^0.2.8",
    "bignumber.js": "^9.0.2",
    "buffer": "^6.0.3",
    "c32check": "^1.0.1",
    "cbor-js": "^0.1.0",
    "crc": "^3.8.0",
    "js-sha512": "^0.8.0",
    "jssha": "3.2.0",
    "rfc4648": "^1.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.0.0",
    "browserify": "^17.0.0",
    "chai": "^4.3.4",
    "eslint-config-standard": "^16.0.3",
    "karma": "^6.3.9",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-typescript": "^5.5.2",
    "mocha": "^9.1.3",
    "node-gzip": "^1.1.2",
    "prettysize": "^2.0.0",
    "rollup": "^2.63.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-polyfill-node": "^0.8.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.31.1",
    "standard": "^16.0.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "uglify-es": "^3.3.10"
  },
  "standard": {
    "ignore": [
      "dist/"
    ]
  }
}
