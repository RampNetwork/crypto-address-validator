{
  "name": "@ramp/api-crypto-address-validator",
  "description": "Wallet address validator for Bitcoin and other Altcoins.",
  "main": "dist/ramp-crypto-address-validator.umd.js",
  "module": "dist/ramp-crypto-address-validator.es5.js",
  "typings": "dist/types/wallet_address_validator.d.ts",
  "version": "1.0.0",
  "author": "RampNetwork",
  "publishConfig": {
    "access": "public"
  },
  "contributors": [
    {
      "name": "Tomek Kolasa",
      "email": "tomek@kolasa.me"
    }
  ],
  "homepage": "https://github.com/RampNetwork/crypto-address-validator",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RampNetwork/crypto-address-validator"
  },
  "scripts": {
    "minify": "uglifyjs -c -m -o dist/wallet-address-validator.min.js -- dist/wallet-address-validator.js",
    "test:node": "mocha -r ts-node/register test/*.ts",
    "test:browser": "karma start",
    "test": "npm run test:node && npm run test:browser",
    "start": "npm run build && npm test",
    "lint": "eslint --ext .ts .",
    "lint:fix": "yarn lint --fix",
    "generateReadme": "node debug/generateReadme.js && git add README.md dist/wallet-address-validator.min.js.gz package.json",
    "createMin": "yarn run bundle && git add dist/wallet-address-validator.js dist/wallet-address-validator.min.js",
    "preversion": "yarn run createMin && yarn run generateReadme",
    "postversion": "git push origin HEAD --follow-tags && hub pull-request -o -b dev -m v%npm_package_version%",
    "build:ts": "tsc",
    "build:rollup": "rollup -c rollup.config.ts",
    "build": "yarn run build:ts && yarn run build:rollup"
  },
  "dependencies": {
    "@iota/validators": "^1.0.0-beta.30",
    "base-x": "^3.0.4",
    "bchaddrjs-slp": "^0.2.8",
    "bech32": "^2.0.0",
    "bignumber.js": "^9.0.2",
    "blake-hash": "^2.0.0",
    "blakejs": "^1.1.1",
    "bs58": "^4.0.1",
    "c32check": "^1.0.1",
    "cbor": "^8.1.0",
    "crc": "^4.1.0",
    "js-sha512": "^0.8.0",
    "jssha": "3.2.0",
    "keccak": "^3.0.2",
    "rfc4648": "^1.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/bluebird": "^3.5.36",
    "@types/bs58": "^4.0.1",
    "@types/chai": "^4.3.0",
    "@types/expect": "^24.3.0",
    "@types/keccak": "^3.0.1",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "chai": "^4.3.6",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-brackets": "^0.1.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-only-warn": "^1.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "karma": "^6.3.13",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-typescript": "^5.5.2",
    "karma-webpack": "^5.0.0",
    "mocha": "^9.1.3",
    "node-gzip": "^1.1.2",
    "prettier": "^2.5.1",
    "prettysize": "^2.0.0",
    "puppeteer": "^13.1.2",
    "rollup": "^2.67.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.31.2",
    "standard": "^16.0.4",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "uglify-es": "^3.3.10",
    "webpack": "^5.68.0"
  },
  "standard": {
    "ignore": [
      "dist/"
    ]
  }
}
